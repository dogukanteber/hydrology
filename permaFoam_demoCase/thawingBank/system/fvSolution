        tolerance       1e-10;
        relTol          0;
    }

}

Picard
{
    nIterPicardFlow                  20; //must be strictly higher than 5 ; 10 should be the best value//
    precPicardFlow                   1e-3;
    stabilisationThresholdFlow       100;

    nIterPicardThermal               50;
    precPicardThermal                1e-5;
    stabilisationThresholdThermal    100;

    nMaxCycle                        50;

    tFact                            1.3;
}

